<% include ../partials/header %>


<div class="row mb-2">
    <% news.forEach(function(article){ %>
    <div class="col-6">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary"><%=article.category%></strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="#"><%=article.title%></a>
                </h3>
                <div class="mb-1 text-muted"><%=article.created.toDateString()%></div>
                <p class="card-text mb-auto"><%=article.body.substring(0, 100)%>...</p>
                <a href="/news/<%=article._id%>">Continue reading</a>
                <a href="#">Source</a>
            </div>
            <img class="card-img-left flex-auto d-none d-lg-block" src="<%=article.image%>" alt="<%=article.image%>">
        </div>
    </div>
    <% }) %>
</div>








<% include ../partials/footer %>